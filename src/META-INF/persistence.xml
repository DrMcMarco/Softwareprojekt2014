<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="Softwareprojekt2014PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
    <class>DTO.Artikel</class>
    <class>DTO.Artikelkategorie</class>
    <class>DTO.Benutzer</class>
    <class>DTO.Auftragsposition</class>
    <class>DTO.Auftragskopf</class>
    <class>DTO.Zahlungskondition</class>
    <class>DTO.Auftragsart</class>
    <class>DTO.Status</class>
    <class>DTO.Anschrift</class>
    <class>DTO.Geschaeftspartner</class>
    <class>DTO.Kunde</class>
    <class>DTO.Lieferant</class>
    <class>DTO.Lieferanschrift</class>
    <class>DTO.Rechnungsanschrift</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/SWPDB"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(ForeignKeys=true)"/>
    </properties>
  </persistence-unit>
</persistence>
